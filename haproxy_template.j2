global
    log         127.0.0.1 local2

    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon

    # turn on stats unix socket
    stats socket /var/lib/haproxy/stats

defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    option http-server-close
    option forwardfor       except 127.0.0.0/8
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000

frontend app *:5000
    mode http
    acl myapp  hdr_sub(host) -i app.local
    use_backend app_back if myapp

backend app_back
    mode http
    balance roundrobin
    option httpchk GET /healthcheck
    option httpclose
    option forwardfor
{% for backend in backends %}
    server {{ backend.hpstname }} {{ backend.address }}:5000 check
{% endfor %}